<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeScreen">

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Name"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#FFC107"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/viewAttractionListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="View Attraction List"
        app:backgroundTint="#03A9F4"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:onClick="viewAttractionButtonPressed"/>

    <TextView
        android:id="@+id/favouriteDestinationTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Your Favourites Destinations"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/favouriteDestinationList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of Favourites"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Clear"
        app:backgroundTint="#03A9F4"
        android:fontFamily="sans-serif"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Log Out"
        app:backgroundTint="#03A9F4"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:onClick="OnClickLogout"/>
</LinearLayout>